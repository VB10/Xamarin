<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneBook.Views.PersonDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Settings">
                <TableRoot>
                    <TableSection Title="Bilgiler">
                        <EntryCell x:Name="_txtName" Label="Adı:" Placeholder="Ad" />
                        <EntryCell x:Name="_txtSurname" Label="Soyadı:" Placeholder="Soyad" />
                        <EntryCell x:Name="_txtPhoneNumber" Label="Telefon No:" Placeholder="Telefon No" Keyboard="Telephone"></EntryCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button x:Name="_btnUpdate" Text="Güncelle"></Button>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>